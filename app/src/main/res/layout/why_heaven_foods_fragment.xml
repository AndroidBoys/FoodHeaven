<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_margin="8dp"
                android:fontFamily="@font/josefin_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textSize="@dimen/material_text_headline"
                android:text="Why HeavenFoods?"/>
            <TextView

                android:layout_margin="8dp"
                android:id="@+id/aboutTextView1"
                android:layout_height="wrap_content"
               android:layout_width="match_parent"
                android:fontFamily="@fonart/josefin_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />
            <ImageView
                android:id="@+id/aboutImage1"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:layout_margin="8dp"
                android:id="@+id/aboutTextView2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:fontFamily="@fonart/josefin_bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />
            <ImageView
                android:id="@+id/aboutImage2"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitXY"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>