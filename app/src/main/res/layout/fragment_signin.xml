<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_xml"
    tools:context="drunkcoder.com.foodheaven.Activities.AuthenticationActivity">

        <TextView
            android:gravity="center"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:id="@+id/signinLogo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/righteous"
            android:text="@string/btn_login"
            android:textColor="@android:color/white"
            android:textSize="64sp"
            />

        <EditText
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight=".5"
            android:id="@+id/usernameEdittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
           android:backgroundTint="#33ffffff"
            android:fontFamily="@font/josefin_regular"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            />

    <LinearLayout
        android:layout_weight=".5"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <EditText
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"

            android:layout_weight=".5"
            android:id="@+id/passwordEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#33ffffff"
            android:fontFamily="@font/josefin_regular"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/passwordVisibilityImageView"
            android:src="@drawable/ic_visibility_off_black_24dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"

            android:layout_gravity="center"
            android:id="@+id/signinButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:fontFamily="@font/josefin_bold"
            android:text="@string/btn_login"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            />

    </LinearLayout>

        <TextView
            android:gravity="center"
            android:layout_weight=".5"
            android:id="@+id/signupTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_bold"
            android:text="@string/text_signup"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        <TextView
            android:layout_weight=".5"
            android:id="@+id/forgotTextview"
            android:layout_width="match_parent"
            android:fontFamily="@font/josefin_bold"
            android:text="@string/text_forgot_password"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_height="wrap_content" />


    </LinearLayout>