<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_margin="48dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/userNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/userEmailTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sohan.kathait@gmail.com"/>
                    <Button
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_gravity="end"
                android:gravity="end"
                android:id="@+id/editProfileLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/editProfileImageView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:fontFamily="@font/josefin_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone :"/>
                <ImageView

                    android:visibility="gone"
                    android:id="@+id/doneImageView"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_check_black_24dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:fontFamily="@font/josefin_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sohan.kathait@gmail.com"/>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Name :"/>
                    <EditText
                        android:focusable="false"
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/userNameEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sohan.kathait@gmail.com"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Phone :"/>
                    <EditText
                        android:focusable="false"
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/phoneEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sohan.kathait@gmail.com"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Email :"/>
                    <EditText
                        android:focusable="false"
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/emailEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sohan.kathait@gmail.com"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Address :"/>
                    <EditText
                        android:focusable="false"
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/addressEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sohan.kathait@gmail.com"/>


                </LinearLayout>

                <TextView
                    android:layout_margin="16dp"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:fontFamily="@font/righteous"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="My Subscription"/>



                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Plan Name :"/>
                    <TextView
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/planNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="None"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Price :"/>
                    <TextView
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/priceTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="None"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Breakfast:"/>
                    <TextView
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/breakfastTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="None"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Lunch :"/>
                    <TextView
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/lunchTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="None"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dinner :"/>
                    <TextView
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/dinnerTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="None"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Days :"/>
                    <TextView
                        android:layout_weight="2"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:fontFamily="@font/josefin_bold"
                        android:id="@+id/daysTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="None"/>

                </LinearLayout>



                <com.google.android.material.button.MaterialButton
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:fontFamily="@font/josefin_bold"
                    android:id="@+id/walletButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorPrimary"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="My Wallet"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>